<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.crossover.inventory.entity.Customer" table="CUSTOMER" catalog="inventory">
        <id name="code" type="java.lang.String">
            <column name="code"/>
        </id>
        <property name="name" type="java.lang.String">
            <column name="name"/>
        </property>
        <property name="address" type="java.lang.String">
            <column name="address"/>
        </property>
        <property name="phoneNo1" type="java.lang.String">
            <column name="phoneNo1"/>
        </property>
        <property name="phoneNo2" type="java.lang.String">
            <column name="phoneNo2"/>
        </property>
        <property name="creditLimit" type="java.math.BigDecimal">
            <column name="creditLimit"/>
        </property>
        <property name="currentCredit" type="java.math.BigDecimal">
            <column name="currentCredit"/>
        </property>
    </class>

</hibernate-mapping>
