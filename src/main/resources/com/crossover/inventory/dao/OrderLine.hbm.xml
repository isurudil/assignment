<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.crossover.inventory.dao.OrderLine" table="ORDER_LINE" catalog="inventory">
        <id name="id" type="int" unsaved-value="any">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property name="orderNumber">
            <column name="orderNumber"/>
        </property>
        <property name="quantity" type="int">
            <column name="quantity"/>
        </property>
        <property name="unitPrice" type="java.math.BigDecimal">
            <column name="unitPrice"/>
        </property>
        <property name="totalPrice" type="java.math.BigDecimal">
            <column name="totalPrice"/>
        </property>
        <property name="productCode" type="java.lang.String">
            <column name="productCode"/>
        </property>
    </class>

</hibernate-mapping>
